set history=2000
set scrolloff=7
set softtabstop=4
set shiftwidth=4

set smartcase
set ignorecase
set hlsearch
set incsearch
set showmatch
set showcmd
set ruler
set mouse=a

set smartindent
set smarttab
set nu
set magic
set autoindent
set tabstop=4

"set cursorcolumn
"set cursorline

syntax enable
syntax on



"autostart the header
autocmd BufNewFile * exec ":call TitleDet()"
"to declare the authority
map <F4> :call TitleDet()<cr>
"add the header
function AddTitle()
	call append(0,"#!/usr/bin/env python")
    call append(1,"")
    call append(2,"# =================******========================")
    call append(3,"# Copyright (C) 2018 Yao Wenhua. All rights reserved.")
    call append(4,"# Press Fn+F4 to update the time to modify and the name of file.")
    call append(5,"")
    call append(6,"# Author: Yao Wenhua")
    call append(7,"# Mail: yaowenhua101@hotmail.com")
    call append(8,"# Create Time:".strftime("%Y-%m-%d %H:%M"))
    call append(9,"# Last Modified: ".strftime("%Y-%m-%d %H:%M"))
    call append(10,"# Filename:\t".expand("%:t"))
    call append(11,"# =================******========================")
    call append(12,"")
    echohl WarningMsg | echo "Successful in adding the copyright." | echohl None
endf
"update the modified time and the file's name
function UpdateTitle()
	normal m'
    execute '/# *Last Modified:/s@:.*$@\=strftime(": %Y-%m-%d %H:%M")@'
    normal ''
	normal mk
    execute '/# *Filename:/s@:.*$@\=":\t".expand("%:t")@'
    execute "noh"
    normal 'k
    echohl WarningMsg | echo "Successful in updating the copy right." | echohl None
endfunction
"start the three function
function TitleDet()
    let n=1
    while n < 10
        let line = getline(n)
        if line =~ '^\#\s*\S*Last\sModified:\S*.*$'
            call UpdateTitle()
            return
        endif
        let n = n + 1
    endwhile
    call AddTitle()
endfunction
